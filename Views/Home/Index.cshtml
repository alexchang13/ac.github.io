@{
    ViewData["Title"] = "Home Page";
}

<div class="container-xxl my-5 py-5">
    <div class="row align-items-center">
        <!-- Left Column - Text Content -->
        <div class="col-md-6">
            <h1 class="display-1 mb-4">Hey, I'm <span style="color: #ff6600;">Alex</span></h1>
