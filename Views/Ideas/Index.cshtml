@model IEnumerable<ACWebApp.Models.Idea>

@{
    ViewData["Title"] = "Ideas List";
}
<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create">Add New Idea</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdeaTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdeaDescription)
            </th>
            <th> 
                @Html.DisplayNameFor(model => model.IdeaPros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdeaCons)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdeaTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdeaDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdeaPros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdeaCons)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>